<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="horizontal"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
              android:padding="@dimen/dimen_8"
              android:textAlignment="center"
              android:text="1" app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent" android:id="@+id/set_number_tv"
              app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/old_count_tv"/>
    <TextView android:layout_width="80dp" android:layout_height="wrap_content" android:text="10"
              android:padding="@dimen/dimen_8"
              android:textAlignment="center"
              app:layout_constraintTop_toTopOf="@+id/set_number_tv"
              app:layout_constraintBottom_toBottomOf="@+id/set_number_tv"
              android:id="@+id/old_count_tv"
              app:layout_constraintStart_toEndOf="@+id/set_number_tv" app:layout_constraintHorizontal_bias="0.5"
              app:layout_constraintEnd_toStartOf="@+id/count_tv"/>

    <TextView android:layout_width="80dp" android:layout_height="wrap_content" android:text="12"
              android:padding="@dimen/dimen_8"
              android:textAlignment="center"
              app:layout_constraintTop_toTopOf="@+id/old_count_tv"
              app:layout_constraintBottom_toBottomOf="@+id/old_count_tv" android:id="@+id/count_tv"
              app:layout_constraintStart_toEndOf="@+id/old_count_tv" app:layout_constraintHorizontal_bias="0.5"
              app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>