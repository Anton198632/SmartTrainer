<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:background="@drawable/exercise_info_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
            android:gravity="center"
            android:text="@string/info_about_site"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/textView3" android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"/>

    <Button android:layout_width="0dp"
            android:layout_margin="@dimen/dimen_2"

            android:layout_height="wrap_content"
            android:text="@string/site_visit"
            android:textColor="@color/colorLiteText"
            android:background="@drawable/dialog_button_light"

            app:layout_constraintEnd_toEndOf="@+id/button_site"
            app:layout_constraintStart_toStartOf="@+id/button_site"
            app:layout_constraintBottom_toBottomOf="@+id/button_site"
            app:layout_constraintTop_toTopOf="@+id/button_site"/>

    <Button android:layout_width="300dp"
            android:id="@+id/button_site"
            android:layout_height="wrap_content"
            android:text="@string/site_visit"
            android:textColor="@color/colorLiteText"
            android:background="@drawable/dialog_button"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>