<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:background="@drawable/main_activity_background_land"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">


    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/imageView2" android:layout_marginTop="@dimen/dimen_32"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/dimen_32" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"/>

    <Button android:layout_width="220dp" android:layout_height="220dp"
            android:stateListAnimator="@null"
            android:background="@drawable/circle_big_shadow"
            android:id="@+id/button"
            app:layout_constraintStart_toStartOf="@+id/circleImageView"
            app:layout_constraintEnd_toEndOf="@+id/circleImageView"
            app:layout_constraintBottom_toBottomOf="@+id/circleImageView"
            app:layout_constraintTop_toTopOf="@+id/circleImageView"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias="0.3"/>
    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/dimen_200"
            android:layout_height="@dimen/dimen_200"
            android:src="@drawable/icon_400"
            app:civ_border_width="@dimen/dimen_2"
            app:civ_border_color="@color/colorLiteText"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/dimen_32" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="@dimen/dimen_32" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.079" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" app:layout_constraintVertical_bias="0.078"
            android:id="@+id/circleImageView"/>
    <EditText
            android:paddingStart="@dimen/dimen_16"
            android:paddingEnd="@dimen/dimen_16"
            android:hint="@string/input_name"
            android:layout_width="@dimen/dimen_200"
            android:layout_height="68dp"
            android:inputType="textPersonName"
            android:maxLength="15"
            android:textSize="14sp"

            android:id="@+id/editText_name"
            android:background="@drawable/edit_text_background"
            android:drawableLeft="@drawable/ic_user"
            android:drawablePadding="@dimen/dimen_16"

            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.753"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.388" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="@string/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorLiteText"
            android:padding="@dimen/dimen_2"

            android:shadowColor="@color/colorShadowText"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="3"

            android:id="@+id/textView2" app:layout_constraintStart_toStartOf="@+id/editText_name"
            app:layout_constraintEnd_toEndOf="@+id/editText_name" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editText_name"/>

    <TextView
            android:text="@string/copyright"
            android:textColor="@color/colorLiteText"
            android:textSize="@dimen/text_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_16"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>